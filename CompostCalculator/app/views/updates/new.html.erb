<div style="width:400px; padding: 5px;margin:0 auto; background-color: lightblue; border: 1px solid black;">
	<h2>New Update</h2>
	<br>
	<%= form_for @update do |f| %>
        <button class="composterButton">
            <%= link_to "Add items", new_item_path(f), style: "color: white" %>
        </button>
	<%= f.submit %>
	<br>
	<br>
	<% end %>
</div>



