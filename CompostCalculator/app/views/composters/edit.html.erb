<!DOCTYPE html>
  <body style="background-image: url(/assets/environment.jpg); background-repeat: repeat-0; background-size: cover" >
    <div class="row">
      <div class="col-md-12" style="color: white; font-size: 400%; font-family: fantasy">
        <br>
        <b>
          Edit Composter
        </b>
      </div>
    </div>
    <div class="row">
    <div class="col-md-6" name= "composterCol">
      <div class="panel panel-default" style="background-color: #101010 "> 
        <div class="panel-heading" style="background: #101010; color: gray; font-family: Helvetica, sans-serif" >Current Composter Information</div>
          <div class="panel-body" style="text-align: left; color: gray; font: medium">
            <div class="row">
              <div class="col-md-7">
                <%= "Name:" %>
                <%= @composter.name %>
                <br>
                <%= "Composter Volume:" %>
                <%= @composter.size %>
                <br>
                <%= "Current Temperature:" %>
                <%= @composter.temperature %>
                <br>
                <%= "Time until next flip:" %>
                <%= @composter.flipTime %>
                <br>
                <%= "Carbon Nitrogen Ratio:" %>
                <%= @composter.cNRatio %>
                <br>
                <%= "Current Moisture Content:" %>
                <%- if @composter.wetWeight %>
                  <%- if @composter.dryWeight %>
                    <%= (100*(@composter.wetWeight - @composter.dryWeight)/(@composter.wetWeight)) %>
                    %
                  <% end %>
                <% end %>
                <br>
              </div>
              <div class="col-md-5">
                <br>
                <img src=/assets/logocropped.png style="vertical-align: middle">
              </div>
            </div>            
          </div>
        </div>     
    </div>
    <div class="col-md-6">
      <div class="dropdown">
        <button class="composterButton dropdown-toggle" type="button" id="addItems" data-toggle="dropdown">Add Item
        <span class="caret"></span></button>   
          <ul class="dropdown-menu" role="menu" aria-labelledby="addItems" style="width: 100%">
             <li> 
              <label>Type:</label>
              <input type="number">
            </li>
            <li> 
              <label>Amount:</label>
              <input type="number">
            </li>
            <li> 
              <button type="button" class="composterButton"> Add </button>
            </li>
          </ul>
      </div>
      <br>
      <div class="dropdown" style="width: 50">
        <button class="composterButton dropdown-toggle" type="button" id="addItems" data-toggle="dropdown">Calculate Moisture Content
        <span class="caret"></span></button>   
          <ul class="dropdown-menu" role="menu" aria-labelledby="moistureContent" style="width: 100%">
          	<%= form_for @composter do |f| %>
	          <div class="row" style="width:400px; margin:0 auto;">
              <div class="col-xs-6">
                <div>
                  <%= f.label :wetWeight %>
                </div>
                <div>
                  <%= f.label :dryWeight %>
                </div>
              </div>
              <div class="col-xs-6">
                <div>
                  <%= f.number_field :wetWeight, class: :text_field, step: :any%>
                </div>
                <div>
                  <%= f.number_field :dryWeight, class: :text_field, step: :any%>
                </div>
              </div>
            </div>
            <br>
              <button class="composterButton" type="submit" data-disable-with="Calculate">
                Calculate
              </button>
            <% end %>
          </ul>
      </div>
      <br>
      <button type="button" class="composterButton"> Empty Composter</button>
      <br>
      <br>
          <%= button_to("Delete", @composter, :method => :delete, class: "composterButton") %>
    </div>
  </div>
  </body>
  