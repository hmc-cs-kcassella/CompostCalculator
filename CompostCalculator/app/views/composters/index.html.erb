<!DOCTYPE html>
<body>
	<div class = "index_container">
		<div class="row">
			<div class="col-md-12" style="color: white; font-size: 400%; font-family: Bebas Neue">
				Let's Start Composting!
			</div>
			<br>
			<div class="col-md-12" style="left: 7.25%;">
				<% @composters.each do |x| %>
				<div class="panel panel-default" style="background: rgba(255,255,255,0.75); width: 30%;"> 
					<div class="panel-heading" style="background: rgba(255,255,255); color: black; font-family: Helvetica, sans-serif" >
						<%- if x.name %>
						<%= x.name %>
						<% else %>
						<br>
						<% end %>
					</div>
					<div class="panel-body" style="text-align: left; color: black; font: medium">
						<div class="row">
							<div class="col-md-12">
								<%= "Current Temperature (celcius):" %>
								<%= x.temperature %>
								<br>
								<%= "Time until next flip (hours):" %>
								<%= x.flipTime %>
								<br>
								<%= "Current Moisture Content:" %>
								<br>
								<ul class="nav navbar-nav">
					                <li style="background: rgba(0,0,0,0.25);">
										<%= link_to "Edit Composter", edit_composter_path(x.id) %>
									</li>
									<li style="background: rgba(0,0,0,0.25);">
										<%= link_to 'View', composter_path(x.id) %>
									</li>
								</ul>
							</div>
						</div>            
					</div>
				</div>  
				<% end %>
				<%- if current_user %>
				<div style="width: 23%; margin: 1%; float: left; margin-top: 30px">
					<a href="composters/new" class="btn btn-default">Add Composter</a>
				</div>
				<% end %>
			</div>
		</div>
	</div>
</body>
